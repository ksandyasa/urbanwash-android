<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/colorBackgroundProgress"
                android:centerY="0.5"
                android:endColor="@color/colorBackgroundProgress"
                android:startColor="@color/colorBackgroundProgress" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="@color/colorEndProgress"
                    android:startColor="@color/colorStartProgress" />
            </shape>
        </clip>
    </item>

</layer-list>