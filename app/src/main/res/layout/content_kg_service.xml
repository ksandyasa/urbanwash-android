<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/ll_content1_kg_service" android:layout_width="match_parent"
        android:layout_height="119dp" android:orientation="horizontal"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="49dp" android:layout_height="49dp"
            android:scaleType="fitCenter" android:src="@drawable/icon_kg"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical" android:gravity="center_vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="@color/colorDarkGrey" android:textSize="24sp"
                android:text="Per Kg Wash + Iron" fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_marginLeft="20dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="@color/colorCustomLightGrey" android:textSize="15sp"
                android:text="Laundry will be charged per kg \n(minimum 3kg per order)" fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_marginLeft="20dp" android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content2_kg_service" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@id/ll_content1_kg_service"
        android:layout_centerHorizontal="true" android:layout_marginTop="40dp"
        android:paddingLeft="20dp" android:paddingRight="20dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_minus_kg_service" android:layout_width="48dp"
            android:layout_height="48dp" android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" android:scaleType="fitCenter"
            android:src="@drawable/icon_minus"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_weight_kg_service" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@color/colorDarkGrey"
            android:textSize="43sp" android:text="5 Kg"
            fontPath="fonts/HelveticaLTStd-Light.otf" android:layout_centerInParent="true"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_plus_kg_service" android:layout_width="48dp"
            android:layout_height="48dp" android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:scaleType="fitCenter"
            android:src="@drawable/icon_add_green"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content3_kg_service" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@id/rl_content2_kg_service"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/colorCustomLightGrey" android:textSize="15sp"
            android:text="Laundry Weights" fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content4_kg_service" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_below="@id/rl_content3_kg_service" android:layout_marginTop="23dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="74dp" android:layout_height="44dp"
            android:scaleType="fitCenter" android:src="@drawable/icon_kg"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textColor="@color/colorCustomGreen" android:textSize="15sp"
            android:text="Not sure how many kg(s)" fontPath="fonts/HelveticaLTStd-Light.otf"
            android:gravity="center" android:layout_marginTop="10dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textColor="@color/colorCustomLightGrey" android:textSize="15sp"
            android:text="@string/kg_service_info" fontPath="fonts/HelveticaLTStd-Light.otf"
            android:gravity="center" android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content5_kg_service" android:layout_width="match_parent"
        android:layout_height="49dp" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title_total_kg_service" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="15sp"
            android:textColor="@color/colorCustomLightGrey" android:text="Total charge"
            fontPath="fonts/HelveticaLTStd-Light.otf" android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_value_total_kg_service" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="24sp"
            android:textColor="@color/colorCustomGreen" android:text="Rp. 200.000"
            fontPath="fonts/HelveticaLTStd-Light.otf" android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>