<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="10"
    android:background="@color/colorWhite">
    
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" android:orientation="horizontal"
        android:gravity="center" android:weightSum="3">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_regular_tab_content_pricing" android:layout_width="0dp"
            android:layout_height="30dp" android:textColor="@color/colorCustomGreen"
            android:textSize="15sp" android:text="Regular"
            android:layout_weight="1" android:gravity="center"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_express_tab_content_pricing" android:layout_width="0dp"
            android:layout_height="30dp" android:textColor="@color/colorCustomGreen"
            android:textSize="15sp" android:text="Express"
            android:layout_weight="1" android:gravity="center"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_deluxe_tab_content_pricing" android:layout_width="0dp"
            android:layout_height="30dp" android:textColor="@color/colorCustomGreen"
            android:textSize="15sp" android:text="Deluxe"
            android:layout_weight="1" android:gravity="center"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="0.75"
        android:orientation="horizontal" android:gravity="center"
        android:background="@drawable/custom_green_background">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_info_tab_content_pricing" android:layout_width="wrap_content"
            android:layout_height="match_parent" android:textSize="15sp"
            android:textColor="@color/colorWhite" android:text="Minimum price to place an order Rp. 50.000"
            android:gravity="center" fontPath="fonts/HelveticaLTStd-Light.otf"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_close_tab_content_pricing" android:layout_width="22.5dp"
            android:layout_height="22.5dp" android:scaleType="fitCenter"
            android:src="@drawable/icon_close1" android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tab_content_pricing" android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="8.25">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>