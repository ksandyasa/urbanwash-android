<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="302dp" android:gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile_item_myprofile1"
        android:layout_width="103.5dp"
        android:layout_height="103.5dp"
        android:layout_marginTop="35.5dp"
        android:layout_centerHorizontal="true"
        app:border_color="#bebebe"
        app:border_width="1.5dp"
        android:src="@drawable/iv_profile_default"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name_item_myprofile1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="25dp"
        android:textSize="24sp" android:textColor="@color/colorDarkGrey"
        android:text="Profile Name" android:gravity="center"
        fontPath="fonts/HelveticaLTStd-Light.otf"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_email_item_myprofile1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:textSize="15sp" android:textColor="@color/colorDarkGrey"
        android:text="example@mail.com" android:gravity="center"
        fontPath="fonts/HelveticaLTStd-Light.otf"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_phone_item_myprofile1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:textSize="15sp" android:textColor="@color/colorDarkGrey"
        android:text="phone number" android:gravity="center"
        fontPath="fonts/HelveticaLTStd-Light.otf"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginTop="20dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_edit_item_myprofile1" android:layout_width="16dp"
            android:layout_height="16dp" android:scaleType="fitCenter"
            android:src="@drawable/icon_edit"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_edit_item_myprofile1" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="5dp"
            android:textSize="15sp" android:textColor="@color/colorCustomGreen"
            android:text="Edit Profile" android:gravity="center"
            fontPath="fonts/HelveticaLTStd-Light.otf"/>

    </LinearLayout>

</LinearLayout>